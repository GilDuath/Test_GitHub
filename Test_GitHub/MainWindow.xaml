<Window x:Class="Test_GitHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_GitHub"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Hallo hier bin ich" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TabControl Height="50"/>
            <TextBlock HorizontalAlignment="Center">
                Das nächste Spiel
                <TextBlock Text="{Binding Name}" Foreground="DarkOrange"/>
                findet in
                <TextBlock Text="{Binding Ort}" Foreground="DarkGreen"/>                
                statt
            </TextBlock>
            <TabControl Height="50"/>
            <Button Content="Mach was" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
